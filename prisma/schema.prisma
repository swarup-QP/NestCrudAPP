// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Task {
  id    Int     @default(autoincrement()) @id
  title String  
  description  String
  status TaskStatus
}

enum TaskStatus {
  Open
  Done
  IN_PROGRESS
}